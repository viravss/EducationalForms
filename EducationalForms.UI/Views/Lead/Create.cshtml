@using Domain.Enums
@model EducationalForms.UI.Dtos.LeadDto
@{
    ViewData["Title"] = "ایجاد مشاوره جدید";
    Layout = "_Layout";
}
<link type="text/css" href="https://cdn.jsdelivr.net/npm/@@dashboardcode/bsmultiselect@1.1.18/dist/css/BsMultiSelect.bs4.min.css" />

<style>
    .badge {
        color: #000000 !important;
    }

</style>

<h1>ایجاد مشاوره جدید</h1>

<div class="col-md-12 col-lg-12">
    <h4 class="mb-3">ورود اطلاعات مشاوره جدید</h4>
    <form action="/Lead/Create" method="post">
        <div class="row g-3">
            <div class="col-sm-6">
                @Html.LabelFor(t=>t.Name , new {@class="form-label"})
                @Html.TextBoxFor(m=>m.Name,"",new { @class="form-control" , @required="required"  } )
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(t=>t.Family , new {@class="form-label"})
                @Html.TextBoxFor(m=>m.Family,"",new { @class="form-control" , @required="required"  } )
            </div>
            <div class="col-sm-6">
                <div class="form-check">
                    @Html.LabelFor(t=>t.Gender , new {@class="form-label"})
                    @Html.DropDownListFor(t => t.Gender, (List<SelectListItem>)ViewBag.GenderEnumList, null, new {@class = "form-select"})
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-check">
                    @Html.LabelFor(t=>t.FamiliarityMethodId , new {@class="form-label"})
                    @Html.DropDownListFor(t => t.FamiliarityMethodId, (List<SelectListItem>)ViewBag.FamiliarityMethod, null, new {@class = "form-select"})
                </div>
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(t=>t.CellPhone , new {@class="form-label"})
                @Html.TextBoxFor(m=>m.CellPhone,"",new { @class="form-control" , @required="required"  } )
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-10">
                        @Html.LabelFor(t => t.PhoneNumber, new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.PhoneNumber, "", new {@class = "form-control", @required = "required"})
                    </div>
                    <div class="col-sm-2">
                        @Html.LabelFor(t => t.CityCode, new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.CityCode, "", new {@class = "form-control", @required = "required"})
                    </div>

                </div>


            </div>

            <div class="col-sm-6">
                <div class="form-check">
                    @Html.LabelFor(t=>t.ConsultantId , new {@class="form-label"})
                    @Html.DropDownListFor(t => t.ConsultantId, (List<SelectListItem>)ViewBag.Consultants, null, new {@class = "form-select"})
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-check">
                    @Html.LabelFor(t=>t.FailureReasonId , new {@class="form-label"})
                    @Html.DropDownListFor(t => t.FailureReasonId, (List<SelectListItem>)ViewBag.FailureReason, null, new {@class = "form-select"})
                </div>
            </div>



            <div class="col-sm-6">
                <div class="form-check">
                    @Html.LabelFor(t=>t.LeadSkillIds , new {@class="form-label"})
                    @Html.ListBoxFor(r=>r.LeadSkillIds , (List<SelectListItem>)ViewBag.LeadSkills)
                </div>
            </div>


            <div class="col-sm-6">
                @Html.LabelFor(t=>t.Description , new {@class="form-label"})
                @Html.TextAreaFor(m=>m.Description,5 , 5,new { @class="form-control" , @required="required"  } )
            </div>


